<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navdrawer_lineitem_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/navdrawer_icon_lineitem"
        android:layout_width="@dimen/navdrawer_lineitem_icon_size"
        android:layout_height="@dimen/navdrawer_lineitem_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/navdrawer_icon_marginleft"
        android:alpha=".54"
        android:src="@drawable/ic_home_black_24dp" />

    <TextView
        android:id="@+id/navdrawer_menuitem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/navdrawer_menuitem_marginleft"
        android:alpha=".87"
        android:gravity="center_vertical"
        android:text="Home"
        android:textColor="#000000"
        android:textSize="@dimen/navdrawer_textsize" />
</LinearLayout>