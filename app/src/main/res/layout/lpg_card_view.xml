<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lpg_card_view"
    android:layout_marginStart ="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginEnd="16dp"
    android:layout_width="wrap_content"
    card_view:cardCornerRadius="6dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/lpg_cylinder_name"
        android:background="@color/lpg_name_bkgrnd"
        android:drawablePadding="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:text="Test"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@id/lpg_cylinder_name"
        android:id="@+id/lpg_cylinder_company"
        android:layout_height="44dp"
        android:textColor="@android:color/black"
        android:text="Text"

        android:layout_marginTop="16dp"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/lpg_cylinder_company_text_height"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:id="@+id/lpg_expiry"
        android:layout_gravity="center_vertical"
        android:text="Text"
        android:textColor="@color/lpg_expiry_textcolor"
        android:layout_below="@id/lpg_cylinder_company"
        android:layout_marginTop="16dp"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/lpg_expiry_textheight"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lpg_expiry"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="right"
            >
            <ImageButton
                android:id="@+id/edit_connection_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/buttonpadleft"
                android:layout_marginRight="@dimen/buttonrightmargin"
                android:background="@drawable/ic_edit_black_24dp_1" />
            <ImageButton
                android:id="@+id/call_refill_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/buttonleftmargin"
                android:scaleType="centerInside"
                android:layout_marginRight="@dimen/buttonrightmargin"
                android:background="@drawable/ic_call_black_36dp_2" />
            <ImageButton
                android:id="@+id/delete_connection_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/buttonleftmargin"
                android:scaleType="centerCrop"
                android:layout_marginRight="@dimen/buttonrightmargin"
                android:background="@drawable/ic_delete_black_36dp_1" />


        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>