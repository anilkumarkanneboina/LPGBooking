<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lpg_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <com.aekan.navya.lpgbooking.utilities.ARCust_TextView
            android:id="@+id/lpg_cylinder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/colorPrimary"
            android:drawablePadding="0dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="Test"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            card_view:font="Junicode"
            card_view:fonttypeFace="Bold" />

    <TextView
        android:id="@+id/lpg_cylinder_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lpg_cylinder_name"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:text="Text"
        android:textColor="@android:color/black"
        android:textSize="@dimen/lpg_cylinder_company_text_height"/>

    <TextView
        android:id="@+id/lpg_expiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lpg_cylinder_company"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="Second Text"
        android:textColor="@color/lpg_expiry_textcolor"
        android:textSize="@dimen/lpg_expiry_textheight"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lpg_expiry"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="24dp"
            android:gravity="start"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/edit_connection_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/buttonpadleft"
                android:layout_marginRight="@dimen/buttonrightmargin"
                android:background="@drawable/ic_edit_black_24dp_1"
                android:scaleType="centerCrop" />
            <ImageButton
                android:id="@+id/call_refill_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/buttonleftmargin"
                android:layout_marginRight="@dimen/buttonrightmargin"
                android:background="@drawable/ic_call_black_36dp_2"
                android:scaleType="centerInside" />
            <ImageButton
                android:id="@+id/delete_connection_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="@dimen/buttonleftmargin"
                android:layout_marginRight="@dimen/buttonrightmargin"
                android:background="@drawable/ic_delete_black_36dp_1"
                android:scaleType="centerCrop" />


        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>