<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/spinnerview_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/spinner_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/reg_spinner_height"
        android:text="Text"
        android:theme="@style/Spinner" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/spinner_view"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/spinner_view"
        android:scaleType="fitStart"
        android:src="@drawable/spinner_dropdown_green_72dp" />

</RelativeLayout>